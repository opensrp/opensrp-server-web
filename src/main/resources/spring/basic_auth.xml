<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:security="http://www.springframework.org/schema/security"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
          http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd">

  	<security:authentication-manager id="opensrpAuthenticationManager" >
        <security:authentication-provider ref="opensrpAuthenticationProvider"/>
    </security:authentication-manager>

	<security:http auto-config="true" realm="OpenSRP" create-session="stateless"
				   authentication-manager-ref="opensrpAuthenticationManager">
		<security:intercept-url pattern="/index.html" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
		<security:intercept-url pattern="/" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
		<security:intercept-url pattern="/multimedia/download/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
		<security:intercept-url pattern="/multimedia/profileimage/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
		<security:intercept-url pattern="/multimedia/media/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
		<security:intercept-url pattern="/user-details" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
		<security:intercept-url pattern="/rest/viewconfiguration/**" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
		<security:intercept-url pattern="/rest/*/getAll" access="ROLE_ALL_EVENTS"/>
		<security:intercept-url pattern="/**" access="IS_AUTHENTICATED_ANONYMOUSLY" method="OPTIONS"/>
		<security:intercept-url pattern="/**" access="ROLE_OPENMRS"/>
		<security:http-basic/>
	</security:http>

</beans>
